@model Beauty.Web.Page.PagedList<Beauty.Model.MoneyRecord>
@using Beauty.Web.Page
@{
    ViewBag.Title = "UserMoney";
}

@Html.Partial("NavSub")
@using (Html.BeginForm("UserSetting", "manager", FormMethod.Post, new { @class = "form-horizontal margintop" }))
{
    <table class="table table-bordered table-hover table-condensed text-center">
        <thead>
            <tr>
             
                <th class="centerandmiddle">消费记录</th>
                <th class="centerandmiddle">可用积分</th>
                <th class="centerandmiddle">时间</th>
            
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                   
                    <td class="centerandmiddle">@Model[i].Type</td>

                    <td class="centerandmiddle">@Model[i].Balance</td>
                    <td class="centerandmiddle">@Model[i].Createtime</td>
                </tr>
            }

        </tbody>

    </table>
    <div class="pagination">

        @Html.Pager(Model)
       
    </div>
}


<script>
    $(function () {
        $("ul[class='nav'] li[class!='dropdown']").removeClass();
        $("ul[class='nav'] li:eq(5)").addClass("active");

        $("ul[class='nav nav-pills'] li:eq(1)").addClass("active");

      
       
    })


</script>
