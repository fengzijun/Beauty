@model Beauty.Web.Models.ResetPasswordModel
@{
   
}


@using (Html.BeginForm("resetpassword", "account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="control-group">
        <div class="controls">
            @Html.ValidationSummary("", new { @class = "text-error" })
        </div>
    </div>
    <div class="hidden">
        <input type="text"  value="@ViewBag.Userid" name="Userid"/>
    </div>
    <div class="control-group">
        @*<label class="control-label" for="inputEmail">Email</label>*@
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        <div class="controls">
            @*<input type="text" id="inputEmail" placeholder="Email">*@
            @Html.PasswordFor(m => m.NewPassword)

        </div>
    </div>
    <div class="control-group">
        @*<label class="control-label" for="inputEmail">Email</label>*@
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
        <div class="controls">
            @*<input type="text" id="inputEmail" placeholder="Email">*@
            @Html.PasswordFor(m => m.ConfirmPassword)

        </div>
    </div>
   
    <div class="control-group">
        <div class="controls">
            <input type="submit" value="提交" class="btn" />
         
        </div>
    </div>
}

